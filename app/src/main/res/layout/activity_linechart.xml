<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.simple.lc.mylibrary.view.MyLineChartView
            android:id="@+id/linechart"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:animTime="3000"
            app:isShowCircle="true"
            app:isShowUnit="true"
            app:textColor="@color/color_home_top"
            app:xyLineColor="@color/colorAccent"
            app:isAnim="true"
            app:isShowGridLine="true"
            app:explainWindowWidth="130dp"
            />

    <Button
            android:id="@+id/btn_linewidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置线条宽度"/>

    <Button
            android:id="@+id/btn_circlewidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="结点圆宽度"/>

    <Button
            android:id="@+id/btn_iskinkedLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="是否是曲线"/>

    <Button
            android:id="@+id/btn_isShowCircle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="是否显示结点圆"/>

</LinearLayout>
