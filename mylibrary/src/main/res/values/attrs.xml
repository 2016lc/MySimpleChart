<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--扇形图-->
    <declare-styleable name="MyPieChartView">
        <attr name="dataSize"/>
        <attr name="dataColor"/>
        <attr name="numSize"/>
        <attr name="numColor"/>
        <attr name="layoutType"/>
        <attr name="animTime"/>
        <attr name="pointingColor"/>
        <attr name="digit"/>
        <attr name="isHollow"/>
    </declare-styleable>

    <!--柱状图-->
    <declare-styleable name="MyBarChartView">
        <attr name="barWidth"/>
        <attr name="bg"/>
        <attr name="yUnit"/>
        <attr name="mSegment"/>
        <attr name="mDigit"/>
        <attr name="barColor"/>
        <attr name="isAnim"/>
        <attr name="animTime"/>
        <attr name="isShowTopNum"/>
        <attr name="isShowGridLine"/>
        <attr name="oneBarColor"/>
        <attr name="twoBarColor"/>
        <attr name="barSpace"/>
    </declare-styleable>

    <!--折线图-->
    <declare-styleable name="MyLineChartView">
        <attr name="lineWidth"/>
        <attr name="mSegment"/>
        <attr name="bg"/>
        <attr name="yUnit"/>
        <attr name="mDigit"/>
        <attr name="lineColor"/>
        <attr name="isAnim"/>
        <attr name="animTime"/>
