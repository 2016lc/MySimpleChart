<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--common-->
    <declare-styleable name="MyCommonView">
        <attr name="isShowUnit" format="boolean"/>
        <attr name="xyLineColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="isAnim" format="boolean"/>
        <attr name="isShowGridLine" format="boolean"/>
        <attr name="animTime" format="integer"/>
        <attr name="xSegment" format="integer"/>
    </declare-styleable>


    <!--扇形图-->
    <declare-styleable name="MyPieChartView">
        <attr name="dataSize"/>
        <attr name="dataColor"/>
        <attr name="numSize"/>
        <attr name="numColor"/>
        <attr name="layoutType"/>
        <attr name="animTime"/>
        <attr name="pointingColor"/>
        <attr name="digit"/>
        <attr name="isHollow"/>
    </declare-styleable>

    <!--柱状图-->
    <declare-styleable name="MyBarChartView">
        <attr name="barColor" format="color"/>
        <attr name="barWidth" format="dimension"/>
        <attr name="barMargin" format="dimension"/>
        <attr name="barIsShowTopNum" format="boolean"/>
        <attr name="barIsDouble" format="boolean"/>

    </declare-styleable>

    <!--折线图-->
    <declare-styleable name="MyLineChartView">
        <attr name="lineWidth" format="dimension"/>
        <attr name="lineColor" format="color"/>
        <attr name="circleColor" format="color"/>
        <attr name="iskinkedLine" format="boolean"/>
        <attr name="isShowCircle" format="boolean"/>
    </declare-styleable>


</resources>